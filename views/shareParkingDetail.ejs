        <div style="display: flex; justify-content: space-between">
            <div class="otherTitle">주소</div>
            <div class="taCenter spContent"><%= result1.address%></div>
        </div>
        <div style="display: flex; justify-content: space-between;">
            <div class="otherTitle">가격(30분 당)</div>
            <div class="taCenter spContent"><%= result1.price.toLocaleString('ko-KR')%>원</div>
            <input type="hidden" id="amVal" value="<%= result1.price%>">
        </div>
        <div style="display: flex; justify-content: space-between">
            <div class="otherTitle">공유주차장 등록자</div>
            <div class="spContent"><%= nickname%></div>
        </div>
        <br>
        <hr>
        <div class="taCenter title" style="padding-bottom: 10px; font-size: 25px;">예약 정보</div>
        <div style="display: flex; justify-content: space-evenly">
            <div class="otherTitle" style="padding-top: 7px;">
                30분 단위 선택
            </div>
            <div>
                <svg xmlns="http://www.w3.org/2000/svg" id="plus" width="16" height="16" fill="currentColor" class="bi bi-caret-left-fill" viewBox="0 0 16 16" >
                    <path d="m3.86 8.753 5.482 4.796c.646.566 1.658.106 1.658-.753V3.204a1 1 0 0 0-1.659-.753l-5.48 4.796a1 1 0 0 0 0 1.506z"/>
                </svg>
                <input type="number" id="count" value="0">
                <svg xmlns="http://www.w3.org/2000/svg" id="minus" width="16" height="16" fill="currentColor" class="bi bi-caret-right-fill" viewBox="0 0 16 16" >
                    <path d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z"/>
                </svg>
            </div>
        </div>
    </div>
    <div style="text-align: center">
        <span class="otherTitle" id="time">0시간 0분</span>
        <input type="text" id="amount" placeholder="0" dir="rtl" readonly style="border : 0; width: 100px; font-size: 30px;">원
    </div>
    <div style="display: flex; justify-content: space-evenly; padding-top: 10px;">
        <div class="spBtn">바로 예약하기</div>
        <div class="spBtn">주인과 채팅하기</div>
    </div>
</body>
<script>
    const amVal = Number(document.getElementById('amVal').value);
    document.getElementById('plus').addEventListener('click', ()=> {
        const count = document.getElementById('count');
        const amount = document.getElementById('amount');
        const time = document.getElementById('time');

        count.value = Number(count.value) + 1;
        let mul = Number(count.value) * 30;
        let t = 0;
        while(mul > 30) {
            mul -= 60;
            t++;
        }
        if(mul === 30)
            time.innerText = `${t}시간 30분`;
        else
            time.innerText = `${t}시간`;

        amount.value = (Number(amount.value.replace(',', '')) + 3000).toLocaleString('ko-KR');
    });
    document.getElementById('minus').addEventListener('click', ()=> {
        const count = document.getElementById('count');
        const amount = document.getElementById('amount');
        const time = document.getElementById('time');

        if(count.value > 0) {
            count.value = Number(count.value) - 1;
            let mul = Number(count.value) * 30;
            let t = 0;
            while(mul > 30) {
                mul -= 60;
                t++;
            }
            if(mul === 30)
                time.innerText = `${t}시간 30분`;
            else if(mul === 0)
                time.innerText = `0시간 0분`;
            else
                time.innerText = `${t}시간`;
            amount.value = (Number(amount.value.replace(',', '')) - 3000).toLocaleString('ko-KR');
        }
    });
</script>
<script>
    // 변수를 추가하여 메뉴 상태를 추적합니다.
    var isMenuVisible = false;

    function toggleMenu() {
        var menu = document.getElementById("menu-container");
        if (!isMenuVisible) {
            menu.style.right = "0";
        } else {
            menu.style.right = "-300px";
        }

        // 메뉴 상태를 업데이트합니다.
        isMenuVisible = !isMenuVisible;
    }
    // 닫기 버튼을 클릭할 때 메뉴를 숨깁니다.
    function closeMenu() {
        var menu = document.getElementById("menu-container");
        menu.style.right = "-300px";
        isMenuVisible = false;
    }

    // 예약 알람 이동
    function reservationAlarm() {
        location.href = "/user/reservation";
    }

    // 회원 정보 수정 이동
    function profileEdit() {
        location.href = "/mypage/:userid/edit";
    }

    // 예약내역조회 이동
    function userReservation() {
        location.href = "/user/reservation";
    }

    //공유주차장등록 이동
    function parkingAdd() {
        location.href = "/mypage/parking/add";
    }

    //채팅방 이동
    function chatBtn() {
        console.log("front 채팅방클릭");
        location.href = "/chat";
    }
</script>
