<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/reset.css" />
    <link rel="stylesheet" type="text/css" href="/index.css" />
    <link rel="stylesheet" href="/map.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script
            type="text/javascript"
            src="https://dapi.kakao.com/v2/maps/sdk.js?appkey=<%= javascriptkey%>"
    ></script>
    <title>Main</title>
    <div id="test"></div>
  </head>
  <body>
    <!-- header -->
    <div class="header-container">
      <nav class="headbox">
        <div class="headermenu">
          <img
            src="https://kdt8-cs.s3.ap-northeast-2.amazonaws.com/%EC%A3%BC%EC%B0%A8%ED%95%98%EC%B9%B4_icon/W_text_logo.svg"
            alt="로고"
            class="logo"
          />

          <div class="menu-icons">
            <div class="menu-icon">
              <img
                src="https://kdt8-cs.s3.ap-northeast-2.amazonaws.com/%EC%A3%BC%EC%B0%A8%ED%95%98%EC%B9%B4_icon/bell.svg"
                alt="알람"
                width="25px"
                height="25px"
              />
            </div>
            <div class="menu-icon">
              <button id="menu-button" onclick="toggleMenu()">
                <img
                  src="https://kdt8-cs.s3.ap-northeast-2.amazonaws.com/%EC%A3%BC%EC%B0%A8%ED%95%98%EC%B9%B4_icon/menu.svg"
                  alt="메뉴"
                  width="25px"
                  height="25px"
                />
              </button>
            </div>
          </div>
        </div>

        <div id="menu-container" class="menu">
          <button id="close-button" onclick="closeMenu()">
            <img
              src="https://kdt8-cs.s3.ap-northeast-2.amazonaws.com/%EC%A3%BC%EC%B0%A8%ED%95%98%EC%B9%B4_icon/X.svg"
              alt="닫기"
              width="25px"
              height="25px"
            />
          </button>

          <div>
            <button class="mypageEdit" onclick="profileEdit()">
              마이페이지
              <div>parkinghaka@gmail.com</div>
            </button>
          </div>

          <div>
            <button onclick="userReservation()">예약 내역 보기</button>
          </div>
          <div>
            <ul>
              <li onclick="parkingAdd()">공유주차장 등록</li>
              <button type="button" id="chat" onclick="chatBtn()">
                <li>채팅방</li>
              </button>
              <li>포인트</li>
              <li>결제내역</li>
            </ul>
          </div>
          <h5>이용안내 및 문의하기</h5>
          <h5>로그아웃</h5>
        </div>

        <div id="search-bar">
          <form action="검색결과페이지URL">
            <div class="search-container">
              <input
                type="text"
                id="search-input"
                name="q"
                placeholder="목적지 또는 주소 검색"
              />
              <div class="filter-icon">
                <img
                  src="https://kdt8-cs.s3.ap-northeast-2.amazonaws.com/%EC%A3%BC%EC%B0%A8%ED%95%98%EC%B9%B4_icon/filter.svg"
                  alt="필터"
                  width="25px"
                  height="25px"
                />
              </div>
              <button type="submit" id="search-button"></button>
            </div>
          </form>
        </div>
      </nav>
    </div>
    <!-- map -->

    <div id="map" style="width: 100%; height: 100vh"></div>
    <div class="search-results" id="search-results"></div>
    <script>
      ( async function () {
        const result = await axios({
          method : 'POST',
          url : '/',
        });
        console.log(result);

        //카카오 맵 기본 설정
        var mapContainer = document.getElementById("map"),
                mapOption = {
                  center: new kakao.maps.LatLng(result.data.tempLat, result.data.tempLng),
                  level: 4,
                };
        var map = new kakao.maps.Map(mapContainer, mapOption);

        //클리닝 리스트 오버레이 설정
        var cleaningPositions = [];
        for(let cleaning of result.data.cleaningList) {
          console.log(cleaning.lat);
          console.log(cleaning.lng);
          cleaningPositions.push(
                  {
                    content :
                            '<div class="customoverlay">' +
                            `  <div  style="text-decoration: none; color: mediumspringgreen; display: flex; justify-content: center; align-items: center; height: 100%;" onclick="cleaningDetail(${cleaning.id})">` +
                            `    <span class="localname">클리닝 요청</span>` +
                            "  </div>" +
                            "</div>",
                    latlng : new kakao.maps.LatLng(cleaning.lat, cleaning.lng),
                  }
          )
        }

        for(let i=0 ; i<cleaningPositions.length ; i++) {
          var customOverlay = new kakao.maps.CustomOverlay({
            position : cleaningPositions[i].latlng,
            content : cleaningPositions[i].content,
          });

          customOverlay.setMap(map);
        }

        //노상주차장 리스트 오버레이 설정
        var publicParkingPositions = [];
        for(let publicParking of result.data.publicParkingList) {
          publicParkingPositions.push(
                  {
                    content :
                            '<div class="customoverlay">' +
                            `  <div  style="text-decoration: none; color: inherit; display: flex; justify-content: center; align-items: center; height: 100%;" onclick="parkingDetail(${publicParking.id})">` +
                            `    <span class="localname">${publicParking.currentparking} / ${publicParking.capacity}</span>` +
                            "  </div>" +
                            "</div>",
                    latlng : new kakao.maps.LatLng(publicParking.lat, publicParking.lng),
                  }
          );
        }
        for(let i=0 ; i<publicParkingPositions.length ; i++) {
          var customOverlay = new kakao.maps.CustomOverlay({
            position : publicParkingPositions[i].latlng,
            content : publicParkingPositions[i].content,
          });

          customOverlay.setMap(map);
        }

      })();
    </script>
    <script>
      // 변수를 추가하여 메뉴 상태를 추적합니다.
      var isMenuVisible = false;

      function toggleMenu() {
        var menu = document.getElementById("menu-container");
        if (!isMenuVisible) {
          menu.style.right = "0";
        } else {
          menu.style.right = "-300px";
        }

        // 메뉴 상태를 업데이트합니다.
        isMenuVisible = !isMenuVisible;
      }
      function parkingDetail(id) {
        console.log('parkingDetail', id);
        location.href = `/publicparking/detail?id=${id}`;
      }
      // 닫기 버튼을 클릭할 때 메뉴를 숨깁니다.
      function closeMenu() {
        var menu = document.getElementById("menu-container");
        menu.style.right = "-300px";
        isMenuVisible = false;
      }

      // 회원 정보 수정 이동
      function profileEdit() {
        location.href = "/user/edit";
      }

      // 예약내역조회 이동
      function userReservation() {
        location.href = "/user/reservation";
      }

      //공유주차장등록 이동
      function parkingAdd() {
        location.href = "/mypage/parking/add";
      }

      //채팅방 이동
      function chatBtn() {
        console.log("front 채팅방클릭");
        location.href = "/chat";
      }
    </script>
  </body>
</html>
